<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Setting"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/successColor"/>
        <CheckBox
            android:id="@+id/usecategoryreplace"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Category Replace"/>
        <CheckBox
            android:id="@+id/usefindbycategory"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Find By Category Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client Setting"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/successColor"/>
        <CheckBox
            android:id="@+id/useslideshow"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use Slide Show"/>
        <CheckBox
            android:visibility="gone"
            android:id="@+id/useadmobsetting"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use AdMob Setting"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnsave"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@color/successColor"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/btncancel"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@color/errorColor"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>